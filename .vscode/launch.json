{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Deploy And Run On Remote",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "${config:sshEndpoint}",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "~/audi-mmi"
                }
            ],
            "preLaunchTask": "copyAndStartOnPi",
            "postDebugTask": "cleanupOnPi"
        }
    ]
}